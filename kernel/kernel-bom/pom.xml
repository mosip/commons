        <guava.version>33.5.0-jre</guava.version>                                        <!-- Legacy Guava version (intentionally old) -->

        <!-- ====================== Sonar / Jacoco Configuration ====================== -->
        <sonar.coverage.exclusions>
            **/constant/**,**/config/**,**/httpfilter/**,**/cache/**,**/entity/**,**/model/**,
            **/exception/**,**/repository/**,**/verticle/**,**/spi/**,**/proxy/**,**/entities/**,
            **/filter/**,**/util/**,**/verifier/**
